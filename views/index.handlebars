<!doctype html>

<html>
<head>
	<title>My HCI Friends</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width,
	initial-scale=1.0">

	<!-- Link CSS -->
	<link rel="stylesheet" type="text/css" href="/css/bootstrap-theme.css">

	<link rel="stylesheet" type="text/css" href="/css/bootstrap.css">

	<link rel="stylesheet" type="text/css" href="/css/hci-friends.css">
	
</head>

<body>
	<!-- Page Content -->
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h1>My HCI Friends</h1>
			</div>
		</div>

		{{#each friends}}
		</div class="row">
			<div class="col-md-12 friend">
				<img class="img-responsive img-rounded" src={{imageURL}}>
				<a href="#">
					<h3 class="friendName">{{name}}</h3>
				</a>
				<p>{{description}}</p>
			</div>
			<hr>
		</div>
		{{/each}}

				<form class="col-md-12" id="addFriendForm" role="form" method="get" action="/add">
					<h3>Add a friend</h3>
				    <div class="form-group">
				      <label for="name">Name:</label>
				      <input type="text" class="form-control" id="name" placeholder="Name" name="name">
				    </div>
				    <div class="form-group">
				      <label for="description">Description:</label>
				      <input type="text" class="form-control" id="description" placeholder="Description" name="description">
				    </div>
				    <input type="submit" id="submitBtn" class="btn btn-default" value="Add the friend"></input>
				</form>

	</div>

	<!-- Link JavaScript -->	
	<script src="/js/jquery-1.11.0.js" type="text/javascript"></script>

	<script src="/js/bootstrap.js" type="text/javascript"></script>

	<script src="/js/hci-friends.js" type="text/javascript"></script>
	

</body>
</html>
